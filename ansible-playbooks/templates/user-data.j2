#cloud-config
disable_root: false
users:
  - default
  - name: root
    ssh-authorized-keys:
      - ssh-rsa  vmadm@lnVM17
    lock_passwd: false
    plain_text_passwd: test
  - name: deep
    ssh-authorized-keys:
      - ssh-rsa  vmadm@lnVM17
    lock_passwd: false
    plain_text_passwd: test
write_files:
  - path: /etc/netplan/50-cloud-init.yaml
    content: |
      network:
          version: 2
          ethernets:
{% for interface in vm.interfaces %}
              enp0s{{interface.slot_id}}:
                  dhcp4: false
                  addresses: [ {{ interface.ip_addr }} ]
                  match:
                      macaddress: "{{interface.mac_addr}}"
{% if interface.default %}
                  routes:
                      - to: default
                        via: "{{interface.ip_gateway}}"
                  nameservers:
                      addresses: [ 8.8.8.8, 8.8.4.4 ]
{% endif %}
{% endfor %}

{% if %}
runcmd: |
  - echo "Hello world"
{% endif %}

    
